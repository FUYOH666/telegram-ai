# Telegram API credentials (получить из https://my.telegram.org)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+7XXXXXXXXXX
TELEGRAM_SESSION_PATH=./sessions/your_bot.session

# AI Server (vLLM или OpenAI-compatible API)
# Для локальной разработки: http://localhost:8000
# Для продакшена: http://100.93.82.48:8000
AI_SERVER_BASE_URL=http://100.93.82.48:8000
AI_SERVER_API_KEY=  # опционально, если нужен API ключ

# ASR Server (для транскрибации голосовых сообщений)
# Для локальной разработки: http://localhost:8001
# Для продакшена: http://100.93.82.48:8001
ASR_SERVER_BASE_URL=http://100.93.82.48:8001

# Meeting Summary
MEETING_OWNER_USERNAME=@your_username

# Google Calendar Integration
GOOGLE_CALENDAR_ENABLED=false

# Database (опционально, по умолчанию используется SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/telegram_ai

